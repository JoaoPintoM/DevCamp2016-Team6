<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cliches.com.cliche">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".utils.App"
        android:allowBackup="true"
        android:launchMode="singleTop"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Google Maps & Place API -->

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAbSHa0oXGfuSNX3FeiGN2T1BrN7d20IrQ"/>

        <!-- Activities -->

        <activity android:name=".missions.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".mission.MissionActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".missions.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cliches.com.cliche.mission.MissionActivity" />
        </activity>

        <activity
            android:name=".spot.SpotActivity"
            android:label="@string/title_activity_spot"
            android:parentActivityName=".mission.MissionActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cliches.com.cliche.mission.MissionActivity" />
        </activity>
    </application>

</manifest>
